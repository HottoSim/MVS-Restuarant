@model List<MVS_Restuarant.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center mb-5">
            <h1 class="display-4 fw-bold">Confirm Your Order</h1>
            <p class="lead text-muted">Please review your order before finalizing</p>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3">Item</th>
                        <th class="text-center px-4 py-3">Quantity</th>
                        <th class="text-end px-4 py-3">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-4 py-3">@item.ItemName</td>
                            <td class="text-center px-4 py-3">
                                <span class="badge bg-secondary rounded-pill px-3 py-2">@item.Quantity</span>
                            </td>
                            <td class="text-end px-4 py-3">
                                <span class="fw-bold">R @item.TotalPrice.ToString("0.00")</span>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-light">
                    <tr>
                        <td colspan="2" class="text-end px-4 py-3 fw-bold">Order Total:</td>
                        <td class="text-end px-4 py-3">
                            <span class="price-badge">R @ViewBag.OrderTotal.ToString("0.00")</span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Cart
        </a>
        <form asp-action="PlaceOrder" asp-controller="Order" method="post">
            <button type="submit" class="btn btn-primary px-4 py-2">
                <i class="bi bi-check2-circle me-2"></i>Place Order
            </button>
        </form>
    </div>
</div>

<style>
    .price-badge {
        background-color: #28a745;
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: bold;
    }
</style>