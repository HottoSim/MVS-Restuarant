@model IEnumerable<MVS_Restuarant.Models.MenuItem>
@{
    ViewData["Title"] = "Menu Items";
}
<head>
    <link href="~/css/menu.css" rel="stylesheet" />
</head>

<div class="container mt-5">
    <h2 class="text-center mb-4">Our Menu</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <!-- Display Item Image -->
                    <img src="data:@item.ContentType;base64,@(Convert.ToBase64String(item.ImageData))" class="card-img-top img-fluid" alt="@item.ItemName" />

                    <!-- Card Body -->
                    <div class="card-body">
                        <h5 class="card-title">@item.ItemName</h5>
                        <p class="card-text">@item.ItemDescription</p>
                        <p class="text-muted"><strong>Category:</strong> @item.Category</p>
                        <p class="text-primary"><strong>Price:</strong> R @item.ItemPrice.ToString("0.00")</p>

                        <!-- Availability -->
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }

                        <!-- Action Button with ItemId and Quantity -->
                        <div class="mt-3">
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <!-- Hidden Fields for ItemId and Quantity -->
                                <input type="hidden" name="menuItemId" value="@item.ItemId" />
                                <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />

                                <button type="submit" class="btn btn-primary w-100">Add to cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
