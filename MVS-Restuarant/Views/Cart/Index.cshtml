@model List<MVS_Restuarant.Models.CartItem>

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.ItemPrice.ToString("C")</td>
                <td>@item.TotalPrice.ToString("C")</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Checkout" class="btn btn-primary">Checkout</a>
